<navigation:ExamplePage xmlns:navigation="navigation/example-page" loaded="onPageLoaded" xmlns:lv="nativescript-telerik-ui-pro/listview" xmlns="http://www.nativescript.org/tns.xsd">
<!-- >> data-operations-getting-started -->
    <GridLayout rows="auto, *">
        <StackLayout orientation="horizontal">
            <Button text="Toggle Filter" tap="toggleFilter" margin="10"/>
            <Button text="Toggle Sorting" tap="toggleSorting" margin="10"/>
            <Button text="Toggle Grouping" tap="toggleGrouping" margin="10"/>
        </StackLayout>
        <lv:RadListView id="myListView" row="1" items="{{ dataItems }}" 
                        enableDataOperations="true">
        <lv:RadListView.listViewLayout>
            <lv:ListViewLinearLayout scrollDirection="Vertical"/>
        </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                <StackLayout orientation="vertical">
                    <Label fontSize="20" text="{{ itemName }}"/>
                    <Label fontSize="14" text="{{ itemDescription }}"/>
                </StackLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>
<!-- << data-operations-getting-started -->
</navigation:ExamplePage>
