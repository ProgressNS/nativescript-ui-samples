<navigation:ExamplePage xmlns:navigation="navigation/example-page" xmlns:f="nativescript-fresco" loaded="onPageLoaded" xmlns:lv="nativescript-ui-listview" xmlns="http://www.nativescript.org/tns.xsd">
    <GridLayout rows="*" >
        <lv:RadListView id="list-view" row="0" items="{{ dataItems }}" marginRight="-2">
            <lv:RadListView.itemTemplate>
                <GridLayout rows="*" backgroundColor="White">
                    <GridLayout rows="*" columns="*" marginBottom="2" marginRight="2">
                        <f:FrescoDrawee
                        height="250"
                        imageUri="{{ image }}"/>
                        <GridLayout verticalAlignment="bottom">
                            <StackLayout backgroundColor="#BBFFFFFF" paddingTop="8" paddingBottom="8" paddingLeft="16" paddingRight="16">
                                <Label text="{{ itemName }}"/>
                                <Label text="{{ itemDescription }}"/>
                            </StackLayout>
                        </GridLayout>
                    </GridLayout>
                </GridLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>
</navigation:ExamplePage>