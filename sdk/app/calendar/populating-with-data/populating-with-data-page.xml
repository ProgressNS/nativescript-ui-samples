<navigation:ExamplePage xmlns:navigation="navigation/example-page" loaded="onPageLoaded" xmlns:lv="nativescript-ui-listview" xmlns:rc="nativescript-ui-calendar" xmlns="http://www.nativescript.org/tns.xsd">
    <navigation.actionBar>
        <ActionBar title="Populating with data" />
    </navigation.actionBar>
	<GridLayout rows="*, 100" orientation="vertical">
        <rc:RadCalendar id="calendar" 
		    eventSource="{{ eventSource }}"
            dateSelected="onDateSelected"
            row="0"/>
        <lv:RadListView items="{{ myItems }}" rowHeight="44" row="1">
            <lv:RadListView.itemTemplate>
                <Label text="{{title}}" marginLeft="10" />
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>
</navigation:ExamplePage>