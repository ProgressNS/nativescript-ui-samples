<navigation:ExamplePage xmlns:navigation="navigation/example-page" loaded="onPageLoaded" xmlns:lv="nativescript-ui-listview" xmlns="http://www.nativescript.org/tns.xsd"
backgroundColor="green">
    <lv:RadListView class="red-transparent-selection-list" id="listView" items="{{ dataItems }}" row="1" selectionBehavior="Press" multipleSelection="true">
        <lv:RadListView.itemTemplate>
            <StackLayout orientation="vertical" android:paddingLeft="16" ios:paddingLeft="50">
                <Label fontSize="20" text="{{ itemName }}"/>
                <Label fontSize="13" text="{{ itemEmail }}"/>
            </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
</navigation:ExamplePage>